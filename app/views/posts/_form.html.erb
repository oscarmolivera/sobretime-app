<%= form_for @post, class: "form-horizontal" do |f|%>
  
  <% if @post.errors.any? %>
    <% @post.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, title: "Sobretime App", sticky: false, time: 1800) %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= f.label :date, class: "control-label"%>
    <%= f.date_field :date, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :rationale, class: "control-label"%>
    <%= f.text_field :rationale, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.radio_button(:status, "registrado") %>
    <%= f.label(:status, "Registrado") %>
    <%= f.radio_button(:status, "aprobado") %>
    <%= f.label(:status, "Aprobado") %>
    <%= f.radio_button(:status, "rechazado") %>
    <%= f.label(:status, "Rechazado") %>
  </div>

  <%= f.submit 'Save', class: "btn btn-primary btn-block"%>
<% end%>