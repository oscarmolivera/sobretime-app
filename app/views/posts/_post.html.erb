<tr>      
    <td>
      <%= post.id%>
    </td>
        <td>
      <%= post.date%>
    </td>
    <td>
      <%= post.overtime_request%>
    </td>
    <td>
      <%= link_to truncate(post.rationale), post %>
    </td>
    <td>
      <%= post.user.full_name%>
    </td>
    <td>
      <%= status_label post.status%>
    </td>
    <td>
      <%= link_to 'Editar | ', edit_post_path(post),  id: "edit#{post.id}" if policy(post).update?%>
      <%= link_to 'Borrar', post_path(post), method: :delete, id: "delete#{post.id}"%>
    </td>
</tr>