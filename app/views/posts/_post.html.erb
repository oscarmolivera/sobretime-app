<tr>      
    <td>
      <%= post.id%>
    </td>
    <td>
      <%= post.date%>
    </td>
    <td>
      <%= truncate(post.rationale)%>
    </td>
    <td>
      <%= post.user.full_name%>
    </td>
    <td>
      <%= status_label post.status%>
    </td>
    <td>
      <%= link_to 'Editar', edit_post_path(post),  id: "edit#{post.id}"%>
      |
      <%= link_to 'Borrar', post_path(post), method: :delete, id: "delete#{post.id}"%>
    </td>
</tr>