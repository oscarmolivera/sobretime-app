<h1>Posts</h1>
<table class="table table-bordered table-hover table-sm">
  <thead>
    <tr>
      <th>
        #
      </th>
      <th>
        Date
      </th>
      <th>
        Rationale
      </th>
      <th>
        User
      </th>
    </tr>
  </thead>
  <tbody>
    <% @post.each do |post|%>
      <tr>      
        <td>
          <%= post.id%>
        </td>
        <td>
          <%= post.date%>
        </td>
        <td>
          <%= post.rationale%>
        </td>
        <td>
          <%= post.user.last_name%>
        </td>
    </tr>
  <% end%>  
  </tbody>
</table>